<%var result%>
<%var err%>
<div class="page-title-box">
    <div class="row align-items-center">
        <div class="col-sm-6">
            <h4 class="page-title">Form Validation</h4>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-right">
                <li class="breadcrumb-item"><a href="javascript:void(0);">Stexo</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0);">Forms</a></li>
                <li class="breadcrumb-item active">Form Validation</li>
            </ol>
        </div>
    </div> <!-- end row -->
</div>
<!-- end page-title -->

<div class="row " style="justify-content: center; margin-top: 100px; ">
    <div class="col-lg-6" >
        <div class="card m-b-30" >
            <div class="card-body" >

                <h4 style="text-align: center;" class="mt-0 header-title">Parol va loginni yangilash</h4>
                <form  action="<%=`/api/user/${result._id}?_method=PUT`%>" method="POST">
                    <div class="form-group">
                        <label>Login kiriting</label>
                        <input type="text" name="login"  class="form-control" minlength="7" required placeholder="Login"/>
                    </div>
                    <div class="form-group">
                        <%if(err){%>
                        <label style="color: red;"><%= err%></label>
                        <% }else{%>
                        <label>Joriy parolingizni kiriting</label>
                        <% }%>
                        <input type="password" name="oldpassword"  class="form-control" minlength="5" required placeholder="*** *** ***"/>
                    </div>
                    <div class="form-group">
                        <label> Yangi parol kiriting</label>
                        <div>
                            <input type="password" name="password"  minlength="7" class="form-control" placeholder="*** *** ***" required
                                   placeholder="Password"/>
                        </div>
                    </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">
                                Submit
                            </button>
                            <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                                Cancel
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div> <!-- end col -->

</div> <!-- end row -->   
<script src="admin/plugins/parsleyjs/parsley.min.js"></script> 
<script>
    $(document).ready(function() {
        $('#myform').parsley();
    });
</script>